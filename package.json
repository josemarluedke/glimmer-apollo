{
  "private": true,
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "ember-basic-dropdown": "^8.11.0",
      "ember-power-select": "^8.3.0",
      "@frontile/core": "npm:@frontile/theme@0.17.1",
      "@frontile/overlays": "0.17.1"
    }
  },
  "scripts": {
    "build": "pnpm --filter glimmer-apollo build",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "start": "concurrently 'pnpm:start:*' --restart-after 5000 --prefixColors auto",
    "start:addon": "pnpm --filter glimmer-apollo start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test",
    "test:ember": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "lerna": "^9.0.3",
    "prettier": "^3.7.4",
    "prettier-plugin-ember-template-tag": "^2.1.2"
  },
  "workspaces": [
    "glimmer-apollo",
    "test-app",
    "site"
  ]
}
